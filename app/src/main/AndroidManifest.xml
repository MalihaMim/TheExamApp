<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.studynook">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudyNook">

        <receiver android:name="com.allyants.notifyme.NotificationPublisher" />
        <receiver android:name="com.allyants.notifyme.BootNotifyMe">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>

        <activity android:name=".NotePage" />
        <activity android:name=".EditCalendarEvent" />
        <activity android:name=".ResetPasswordPage" />
        <activity android:name=".CalendarPage" />
        <activity android:name=".EditProfile" />
        <activity android:name=".WellBeingPage" />
        <activity android:name=".FitnessPage" />
        <activity android:name=".MentalHealthPage" />
        <activity android:name=".HomePage" />
        <activity android:name=".FlashcardPage" />
        <activity android:name=".NotificationsPage" />
        <activity android:name=".EditText" />
        <activity android:name=".TimerPage"/>
        <activity android:name=".CountdownPage" />
        <activity android:name=".SetAlarm" />
        <activity android:name=".CreatePage" />
        <activity android:name=".TutorialPage" />
        <activity android:name=".ReferencePage" />
        <activity android:name=".LibraryPage" />
        <activity android:name=".ResourcesPage" />
        <activity android:name=".CountdownTimer" />
        <activity android:name=".BreakPage" />
        <activity android:name=".PlannerPage" />
        <activity android:name=".LoginPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SchedulingPage" />
        <activity android:name=".StopwatchPage" />
        <activity android:name=".SignUpPage" />
        <activity android:name=".ProfilePage" />
        <activity android:name=".ViewCalendarEvents" />
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>