<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResourcesPage"
    android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resources"
        android:textColor="@color/logo2"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:fontFamily="@font/ex_light" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <Button
            android:id="@+id/btn_references"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style_dark"
            android:text="References"
            android:layout_marginTop="10sp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btn_tutorials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style_dark"
            android:text="Tutorials"
            android:layout_marginTop="10sp"
            android:textAllCaps="false"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/btn_library"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/button_style_dark"
            android:text="Library"
            android:textAllCaps="false"
            android:layout_marginTop="10sp"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>