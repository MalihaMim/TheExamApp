<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResourcesPage"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_orange"
        android:layout_alignParentTop="true"
>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resources"
                android:textColor="@color/white"
                android:textSize="40sp" />


        <ImageView
            android:id="@+id/btn_admin_testdrive_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_references"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="References"
            android:layout_marginTop="10sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_orange"
            tools:targetApi="lollipop" />
        <Button
            android:id="@+id/btn_tutorials"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Tutorials"
            android:layout_marginTop="10sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_orange"
            />
        <Button
            android:id="@+id/btn_library"
            android:layout_width="200sp"
            android:layout_height="44dp"
            android:text="Library"
            android:textAllCaps="false"
            android:layout_marginTop="10sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_orange"
            />
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/light_orange"
        app:itemTextColor="@drawable/red_selector"
        app:itemIconTint="@drawable/red_selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>